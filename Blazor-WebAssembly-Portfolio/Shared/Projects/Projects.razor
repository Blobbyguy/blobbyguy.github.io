@namespace BlazorWebAssemblyPortfolio.Shared.Projects


@foreach (var item in config.Items)
{
    <MudCard Class="mud-theme-primary" Outlined="true">
        <MudCardContent>
            <MudStack Class="mud-theme-secondary" Row="true">
                <MudImage Height="200" Src="@item.imagePath" Alt="Image of Project"></MudImage>
                <MudPaper>
                    <MudText Typo="Typo.h6">@item.Title</MudText>
                    <MudText Typo="Typo.subtitle1">@item.Subtitle</MudText>
                    <MudText Typo="Typo.body2">@((MarkupString)item.Description)</MudText>
                    <MudPaper>
                        @foreach (var chip in item.Skills)
                        {
                            <MudChip>
                                @chip
                            </MudChip>
                        }
                    </MudPaper>
                </MudPaper>
            </MudStack>
        </MudCardContent>
    </MudCard>
}



