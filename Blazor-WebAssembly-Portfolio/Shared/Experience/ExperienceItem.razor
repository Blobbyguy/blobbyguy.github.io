@namespace BlazorWebAssemblyPortfolio.Shared.Experience

<MudTimelineItem Size="Size.Medium">
    @*<ItemOpposite>
        <MudText>@Date</MudText>
    </ItemOpposite>*@
    <ItemContent >
        <MudPaper Elevation="0" Class="mt-n1">
            <MudText Color="Color.Dark" Typo="Typo.h6" GutterBottom="true">@Heading</MudText>
            <MudText Color="Color.Dark" Typo="Typo.subtitle1" GutterBottom="true">@Date</MudText>
            <MudText Color="Color.Dark" Typo="Typo.subtitle2" GutterBottom="true">@Subheading</MudText>
            <MudText Typo="Typo.body2">@((MarkupString)Body)</MudText>

        </MudPaper>
            @foreach (var chip in Attributes)
            {
                <MudChip>
                    @chip
                </MudChip>
            }
    </ItemContent>
</MudTimelineItem>

@code{
    [Parameter]
    public string Heading { get; set; } = "";

    [Parameter]
    public string Subheading { get; set; } = "";

    [Parameter]
    public string Body { get; set; } = "";

    [Parameter]
    public string Date { get; set; } = "";

    [Parameter]
    public List<String> Attributes { get; set; } = new();
}

